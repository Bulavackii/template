{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": "client/src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["client/src/**/*"],
  "exclude": ["node_modules"]
}